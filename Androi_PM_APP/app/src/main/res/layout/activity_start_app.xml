<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/tone"
    tools:context=".login.StartAppActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ion" />

    <TextView
        android:id="@+id/txtNameApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bangersregular"
        android:text="Quản lý sản phẩm"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:layout_below="@+id/imageView2"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txtAbc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:text="Trường Đại học Mở Hà Nội" />

</RelativeLayout>